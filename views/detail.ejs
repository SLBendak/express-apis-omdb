<% // Render individual movie details here %>
<% // This is how to do comments in EJS, by the way... %>
<h1><%= movies.Title %> (<%= movies.Year %>) </h1>
<img id="float-img" src="<%= movies.Poster %>" alt="Poster">



<p>
    <div>Rated: <%= movies.Rated %></div>
    <br>
    <div>Genre: <%= movies.Genre %> </div>
    <br>
    <div>Writer: <%= movies.Writer %> </div>
    <br>
    <div>Director: <%= movies.Director %></div>
    <br>
    <div> Actors: <%= movies.Actors %> </div>
    <br>
    <%= movies.Plot %>
    <br>
    <br>
    <div> Awards: <%= movies.Awards %> </div>
    <br>
    <div>IMDB Rating: <%= movies.imdbRating%></div>
</p>
<form method="POST" action="/faves">
    <input id='title' hidden type="text" name="title" value="<%= movies.title %>">
    <input id='imdbid' hidden type="text" name="imdbid" value="<%= movies.imdbID %>">
    <button type="submit" name="title">Add to favorites</button>
</form>